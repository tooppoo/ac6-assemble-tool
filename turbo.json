{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "format": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
