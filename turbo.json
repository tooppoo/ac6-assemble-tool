{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "preview": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "outputs": ["dist/**", "analyze.html"],
      "dependsOn": ["^build"],
      "env": ["ANALYZE_MODE", "NODE_ENV"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    },
    "coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^coverage"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "format": {
      "dependsOn": ["transit"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
