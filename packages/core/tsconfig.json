{
  "extends": ["@ac6_assemble_tool/tsconfig/base.json"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "types": ["@ac6_assemble_tool/spec/lib/vitest"],
    "paths": {
      "~core/*": ["./src/*"],
      "~spec/*": ["./spec/*"],
      "~spec-helper/*": ["./spec-helper/*"]
